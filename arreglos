/**
 *
 * @author kevin
 */

public class NombresCompañeros {
    public static void main(String[] args) {
        // Declaración y asignación del arreglo multidimensional con 5 registros
        String[][] compañeros = {
            {"Daniel", "Medina", "Electrónica", "TEST"},
            {"Monica", "Jiz", "Computación", "IMSA"},
            {"Carlos", "Gómez", "Mecatrónica", "TechCorp"},
            {"Ana", "Fernández", "Industrial", "AutoMec"},
            {"Luis", "Ramírez", "Software", "DevSoft"}
        };
        
        // Imprimir los datos almacenados en el arreglo
        System.out.println("Lista de compañeros con sus datos:");
        for (int i = 0; i < compañeros.length; i++) {
            System.out.println((i + 1) + ". Nombre: " + compañeros[i][0] + ", Apellido: " + compañeros[i][1] + ", Carrera: " + compañeros[i][2] + ", Lugar de Trabajo: " + compañeros[i][3]);
        }
    }
}
