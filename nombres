 * @author kevin
 */
public class nombres {
    
}
public class Nombrescompañeros {
    public static void main(String[] args) {
        // Declaración y asignación del arreglo multidimensional con nombres y notas
        String[][] estudiantes = {
            {"Daniel", "65"},
            {"Monica", "89"},
            {"Carlos", "75"},
            {"Ana", "50"},
            {"Luis", "92"}
        };
        
        // Imprimir los datos almacenados en el arreglo
        System.out.println("Lista de estudiantes con sus notas y estado:");
        for (int i = 0; i < estudiantes.length; i++) {
            String nombre = estudiantes[i][0];
            int nota = Integer.parseInt(estudiantes[i][1]);
            String estado = (nota >= 60) ? "Aprobado" : "Reprobado";
            
            System.out.println((i + 1) + ". Nombre: " + nombre + ", Nota: " + nota + ", Estado: " + estado);
        }
    }
}
